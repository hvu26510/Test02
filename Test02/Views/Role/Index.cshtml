@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Role Management</h2>

<a asp-action="Create" class="btn btn-primary">Create New Role</a>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
