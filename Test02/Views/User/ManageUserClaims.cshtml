@model Test02.Models.ViewModels.UserClaimsViewModel


<h2>Manage Claims for User</h2>

<form asp-action="ManageUserClaims" method="post">
    <input type="hidden" asp-for="UserId" />
    <table class="table">
        <thead>
            <tr>
                <th>Claim</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="Claims[i].ClaimType" />
                        @Model.Claims[i].ClaimType
                    </td>
                    <td>
                        <input type="checkbox" asp-for="Claims[i].IsSelected" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Update</button>
</form>